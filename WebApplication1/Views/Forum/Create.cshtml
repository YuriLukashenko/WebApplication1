@model WebApplication1.Models.Forum.AddForumModel

<div class="container body-content">
    <div class="row sectionHeader">
        <div class="sectionHeading noBorder">
            Creating New Forum
        </div>
    </div>
    <div class="row mainContent">
        <div id="createForumSection">
            <div class="col-lg-3"></div>
            <form asp-action="AddForum" method="post" id="createForumSection" enctype="multipart/form-data" class="col-lg-6">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Title">Forum Title</label>
                    <input asp-for="Title" class="form-control" placeholder="Choose forum title"/>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description">Forum Description</label>
                    <input asp-for="Description" class="form-control" placeholder="Write a brief description of the forum topic"/>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div id="upload">
                    <label>Upload Forum Image</label>
                    <br/>
                    <label class="btn btn-default btn-file">
                        Browse <input asp-for="ImageUpload" type="file" style="display: none"/>
                    </label>
                </div>
                <button type="submit" id="newFormBtn" class="btn btn-submitPost marginfix8">
                    Create Forum
                </button>
            </form>
        </div>
    </div>
</div>